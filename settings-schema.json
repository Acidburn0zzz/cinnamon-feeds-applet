{
    "url": {
        "type" : "entry",
        "default" : "http://fxfeeds.mozilla.com/en-US/firefox/headlines.xml",
        "description" : "Feed URL",
        "tooltip" : "Enter the URL of a valid RSS feed"
    },
    "max_items": {
            "type" : "scale",
            "default" : 10,
            "min" : 1,
            "max" : 50,
            "step" : 1,
            "description" : "Maximum number of items",
            "tooltip" : "Maximum number of items to display for this feed"
    },
    "show_read_items": {
        "type" : "checkbox",
        "default" : true,
        "description" : "Show read items",
        "tooltip" : "Controls whether previously read items are displayed in the feed menu"
    },
    "refresh_interval": {
        "type" : "scale",
        "default" : 5,
        "min" : 1,
        "max" : 60,
        "step" : 1,
        "description" : "Update interval",
        "tooltip" : "Interval between checking for new items"
    }
}
